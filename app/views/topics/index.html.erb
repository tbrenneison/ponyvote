<div class="row">
	<div class="col-xs-12 col-sm-4">
			<%= form_tag topics_path, :class => 'form-inline', :method => 'get'  do %>
  		 	<%= text_field_tag :search, params[:search], :class => 'form-control input-sm form-inline' %>
  		 	<%= submit_tag "Search For A Pony", :title => nil  %>
				<% end %>
	</div>
	<div class="col-xs-12 col-sm-4">
 	 	  <%= button_to "See All Ponies", { :action => 'index'}, :method => :get %>
	</div>
	<div class="col-xs-12 col-sm-4">
		<%= button_to "Suggest A New Pony", { :action => 'new'}, :method => :get %>
	</div>
</div>


<br>
<p id="notice" style="text-align: center"><%= notice %></p>
<div class="tablewrap">
<table class="table table-striped table-responsive">
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td>
			  <strong><%= link_to topic.title, topic %></strong>
		  </td>
		  <td><%= pluralize(topic.votes.count, "vote") %></td>
		  <td><%= button_to '+1', upvote_topic_path(topic), method: :post %><td>
		  <td><%= button_to '-1', downvote_topic_path(topic), method: :post %><td>
        <!--<td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


